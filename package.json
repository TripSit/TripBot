{
  "name": "tripbot",
  "version": "6.5.0",
  "description": "A bot for TripSit (and maybe the world)",
  "main": "start.ts",
  "engines": {
    "node": "v20.2.0",
    "npm": "9.6.6"
  },
  "scripts": {
    "start": "docker compose --project-name tripsit-dev-apps up tripbot -d --force-recreate --build",
    "## Docker": "",
    "docker:logs": "docker container logs tripbot -f -n 100",
    "docker:test": "docker exec -it tripbot npm run local:test",
    "docker:lint": "docker exec -it tripbot npm run local:lint",
    "docker:deploy": "docker exec -it tripbot npm run local:deploy",
    "docker:stop": "docker stop tripbot",
    "## Codespaces": "",
    "codespace:start": "npx tsc-watch --onSuccess 'npx nodemon --config ./nodemon.json'",
    "codespace:deploy": "npx ts-node --transpile-only ./src/discord/utils/commandDeploy.ts",
    "## Local": "",
    "local:test": "jest --silent -c ./jest/jest.unit.config.ts",
    "local:lint": "eslint --fix --ext .ts,.js .",
    "local:deploy": "ts-node --transpile-only ./src/discord/utils/commandDeploy.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TripSit/TripBot"
  },
  "keywords": [
    "Harm",
    "Reduction",
    "Bot"
  ],
  "author": "Eric / Moonbear / Teknos <eric@tripsit.me>",
  "contributors": [
    "Ajar",
    "Change",
    "Hipperooni",
    "SevenCats"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/TripSit/TripBot/issues"
  },
  "homepage": "https://github.com/TripSit/TripBot#readme",
