{
  "name": "tripsit-tripbot",
  "version": "6.0.0",
  "description": "A bot for TripSit (and maybe the world)",
  "main": "start.ts",
  "engines": {
    "node": "16.17.1",
    "npm": "8.19.2"
  },
  "scripts": {
    "start": "npm run deploy && ts-node --transpile-only src/start.ts",
    "dev": "npm run lint && npm run patch && npm run nodemon",
    "setup": "npm run lint && npm run patch && npm run docker-build && npm run docker-run",
    "test": "NODE_ENV=test jest -c ./src/jest/jest.unit.config.ts",
    "lint": "eslint --fix --ext .ts,.js .",
    "patch": "npm version patch -git-tag-version false",
    "nodemon": "nodemon --inspect=0.0.0.0:9229 --config ./nodemon.json",
    "docker-rebuild": "npm run docker-build && npm run docker-run",
    "docker-build": "docker compose build",
    "docker-run": "docker compose up -d",
    "deploy": "ts-node --transpile-only ./src/discord/utils/commandDeploy.ts",
    "sonar-scanner": "sonar-scanner   -Dsonar.projectKey=tripbot   -Dsonar.sources=.   -Dsonar.host.url=https://sonarqube.pantheon.tripsit.me   -Dsonar.login=ec3c544afc5fee1baf64900580ddac40fc3cb97b"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TripSit/tripsit-discord-bot.git"
  },
  "keywords": [
    "Harm",
    "Reduction",
    "Bot"
  ],
  "author": "Eric / Moonbear / Teknos <eric@tripsit.me>",
  "contributors": [
    "SevenCats",
    "Change",
    "Ajar",
    "Hipperooni"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/TripSit/tripsit-discord-bot/issues"
  },
  "homepage": "https://github.com/TripSit/tripsit-discord-bot#readme",
  "dependencies": {
    "@discordjs/rest": "^1.4.0",
    "@logtail/node": "^0.1.14",
    "@logtail/winston": "^0.1.14",
    "@napi-rs/canvas": "^0.1.30",
    "@octokit/rest": "^19.0.5",
    "@octokit/types": "^8.0.0",
    "axios": "^1.2.0",
    "body-parser": "^1.20.1",
    "chalk": "^5.1.2",
    "common-tags": "^1.8.2",
    "convert-units": "^2.3.4",
    "discord-api-types": "^0.37.20",
    "discord.js": "^14.7.0",
    "dotenv": "^16.0.3",
    "fuse.js": "^6.6.2",
    "imdb-api": "^4.4.1",
    "knex": "^2.3.0",
    "luxon": "^3.1.0",
    "ms": "^2.1.3",
    "node-fetch": "^3.3.0",
    "npm-check-updates": "^16.4.3",
    "octokit": "^2.0.10",
    "pg": "^8.8.0",
    "sonar-scanner": "^3.1.0",
    "ts-node": "^10.9.1",
    "winston": "^3.8.2",
    "youtube-search": "^1.1.6",
    "youtube-search-without-api-key": "^1.1.0"
  },
  "devDependencies": {
    "@types/common-tags": "^1.8.1",
    "@types/convert-units": "^2.3.5",
    "@types/jest": "^29.2.3",
    "@types/luxon": "^3.1.0",
    "@types/ms": "^0.7.31",
    "@types/node": "^18.11.9",
    "@types/underscore": "^1.11.4",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-import-resolver-typescript": "^3.5.2",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^27.1.6",
    "jest": "^29.3.1",
