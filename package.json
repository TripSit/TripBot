{
  "name": "tripsit-tripbot",
  "version": "5.0.15",
  "description": "A bot for TripSit (and maybe the world)",
  "main": "start.ts",
  "scripts": {
    "dev": "npm run lint && npm run patch && npm run nodemon",
    "patch": "npm version patch -git-tag-version false",
    "nodemon": "nodemon --config ./nodemon.json",
    "start": "npm run deploy && npm run prod",
    "lint": "eslint --fix --ext ts .",
    "deploy": "ts-node --transpile-only ./src/discord/utils/commandDeploy.ts",
    "prod": "ts-node --transpile-only src/start.ts",
    "DB_backup": "ts-node --transpile-only ./src/global/functions/database-backup.ts",
    "DB_ETL": "ts-node --transpile-only ./src/global/functions/database-mee6expTransfer.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TripSit/tripsit-discord-bot.git"
  },
  "keywords": [
    "Harm",
    "Reduction",
    "Bot"
  ],
  "author": "Eric / Moonbear / Teknos <eric@tripsit.me>",
  "contributors": [
    "SevenCats",
    "Change",
    "Ajar"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/TripSit/tripsit-discord-bot/issues"
  },
  "homepage": "https://github.com/TripSit/tripsit-discord-bot#readme",
  "dependencies": {
    "@discordjs/rest": "^1.2.0",
    "@napi-rs/canvas": "^0.1.30",
    "@octokit/rest": "^19.0.4",
    "axios": "^0.27.2",
    "chalk": "^5.0.1",
    "common-tags": "^1.8.2",
    "convert-units": "^2.3.4",
    "discord-api-types": "^0.37.11",
    "discord.js": "^14.5.0",
    "dotenv": "^16.0.3",
    "express": "^4.18.1",
    "firebase-admin": "^11.0.1",
    "fuse.js": "^6.6.2",
    "imdb-api": "^4.4.1",
    "matrix-org-irc": "^1.4.0",
    "ms": "^2.1.3",
    "node-fetch": "^3.2.10",
    "octokit": "^2.0.7",
    "ts-node": "^10.9.1",
    "winston": "^3.8.2",
    "youtube-search": "^1.1.6",
    "youtube-search-without-api-key": "^1.0.7"
  },
  "devDependencies": {
    "@types/common-tags": "^1.8.1",
    "@types/convert-units": "^2.3.5",
    "@types/ms": "^0.7.31",
    "@types/node": "^18.7.23",
    "@types/underscore": "^1.11.4",
    "@typescript-eslint/eslint-plugin": "^5.38.1",
    "@typescript-eslint/parser": "^5.38.1",
    "eslint": "^8.24.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-google": "^0.14.0",
    "eslint-import-resolver-typescript": "^3.5.1",
    "eslint-plugin-import": "^2.26.0",
    "nodemon": "^2.0.20",
    "typescript": "^4.8.4"
  },
  "engines": {
    "node": "16.17.1",
    "npm": "8.19.2"
  }
}
