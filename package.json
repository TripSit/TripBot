    "@octokit/webhooks-types": "^7.1.0",
    "@sentry/node": "^7.57.0",
    "@types/node-os-utils": "^1.3.1",
    "@types/source-map-support": "^0.5.6",
    "axios": "^1.4.0",
    "common-tags": "^1.8.2",
    "convert-units": "^2.3.4",
    "discord-api-types": "^0.37.48",
